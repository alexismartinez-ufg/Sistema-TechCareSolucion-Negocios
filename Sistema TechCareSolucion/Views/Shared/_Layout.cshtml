<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema_TechCareSolucion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="border-bottom">
        <nav class="navbar bg-transparent navbar-expand-lg navbar-light bg-lightt">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">TechCare Solucion</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                                               
                        @RenderSection("CatalogStore", required: false)

                        @RenderSection("LoginButton", required: false)

                        @RenderSection("Administracion", required: false)
                    </ul>

                    @RenderSection("CartButton", required: false)
                    @RenderSection("LogoutButton", required: false)
                </div>
            </div>
        </nav>
    </header>
    <div class="container @RenderSection("ContainerStyles", required: false)">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/DataTables/datatables.min.js"></script>
    <script src="~/lib/DataTables/DataTables-1.11.3/js/dataTables.bootstrap4.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
